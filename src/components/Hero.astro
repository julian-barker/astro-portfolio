---
import "@fontsource/audiowide";
---

<div
			class="hero relative max-h-screen h-max backdrop-brightness-50 backdrop-hue-rotate-30 flex-col content-center md:grid grid-cols-5 rounded-md place-items-center overflow-hidden"
		>
			<a
				href="https://github.com/julian-barker"
				target="_blank"
				rel="noreferrer"
				class="github-corner absolute top-0 left-0"
				aria-label="View source on GitHub"
			>
				<svg
					width="70"
					height="70"
					viewBox="0 0 250 250"
					style={{
						fill: "#72bf0c",
						color: "#040",
						position: "absolute",
						top: 0,
						border: 0,
						left: 0,
						transform: "scale(-1, 1)",
						zIndex: 9999,
					}}
					aria-hidden="true"
				>
					<path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path>
					<path
						d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2"
						fill="currentColor"
						style={{ transformOrigin: "130px 106px" }}
						class="octo-arm"></path>
					<path
						d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z"
						fill="currentColor"
						class="octo-body"></path>
				</svg>
			</a>
			<img
				class="w-full max-h-80 object-cover object-center shadow-xl md:hidden"
				src="/images/hero.jpeg"
				alt="placeholder"
			/>
			<div class="my-16 col-span-2 flex-col content-center items-center md:my-4">
				<h1
					class="mb-4 text-center text-4xl font-audiowide text-transparent bg-gradient-to-r from-orange-700 via-amber-400 to-orange-500 bg-clip-text drop-shadow-xl md:mt-0 md:text-start lg:text-5xl xl:text-6xl"
				>
					Julian Barker
				</h1>
				<div>
					<div
						class="mb-3 -ml-28 text-center text-xl font-audiowide text-orange-500 drop-shadow-lg md:text-left md:text-2xl md:ml-12 lg:text-3xl lg:ml-8 xl:text-4xl xl:ml-16"
					>
						Design.
					</div>
					<div
						class="mb-3 ml-24 text-center text-xl font-audiowide text-amber-500 drop-shadow-lg md:text-left md:text-2xl md:ml-24 lg:text-3xl lg:ml-28 xl:text-4xl xl:ml-44"
					>
						Develop.
					</div>
					<div
						class="mb-3 -ml-12 text-center text-xl font-audiowide text-yellow-500 drop-shadow-lg md:text-left md:text-2xl md:ml-36 lg:text-3xl lg:ml-52 xl:text-4xl xl:ml-72"
					>
						Deploy.
					</div>
				</div>
			</div>
			<div class="hidden relative col-span-3 -skew-x-12 translate-x-20 md:block overflow-hidden">
				<img
					class="relative -left-20 skew-x-12 object-cover object-center shadow-xl"
					src="/images/hero.jpeg"
					alt="placeholder"
				/>
			</div>
		</div>