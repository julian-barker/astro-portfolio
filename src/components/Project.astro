---
export interface Props {
	title: string,
	body: string,
	link: string,
	gh: string,
	images: string[],
	technologies: {
		title: string,
		name: string
	}[]
}

const { title, body, link, gh, images, technologies} = Astro.props;
---

<li class="link-card rounded-md text-gray-300 bg-stone-500 sm:w-96">
	<div class="w-full h-48 sm:h-72">
		<img 
		class="mx-auto mb-4 rounded-md shadow-xl h-48 brightness-90 object-cover object-top sm:h-72" 
		src={images[0]}
		alt="placeholder"
		>
	</div>
	<div class="p-4">
		<div>
			<h2 class="mb-4 font-bold text-3xl text-lime-400 drop-shadow-md">
				{title}
			</h2>
			<div class="mb-4 flex space-x-6">
				<a href={link} target="_blank" class="px-3 py-2 rounded-md bg-lime-600 text-sm text-center shadow-md focus:outline-none focus:ring focus:ring-offset-2 focus:ring-lime-800 hover:bg-lime-700 hover:-translate-y-0.5 hover:-translate-x-0.5 transition-all active:bg-lime-800 active:scale-95">
					Deployed Site
				</a>
				<a href={gh} target="_blank" class="px-3 py-2 rounded-md bg-lime-600 text-sm text-center shadow-md focus:outline-none focus:ring focus:ring-offset-2 focus:ring-lime-800 hover:bg-lime-700 hover:-translate-y-0.5 hover:-translate-x-0.5 transition-all active:bg-lime-800 active:scale-95">
					GitHub Repo
				</a>
			</div>
			<p class="mb-2 text-sm text-justify sm:text-md">
				{body}
			</p>
		</div>
		<hr class="w-full">
		<div class="my-3">
			<h3 class="my-3 font-bold text-lg text-center text-stone-800">Built With:</h3>
			<div class="flex flex-wrap justify-evenly gap-y-6">
				{technologies.map(el => {
					return (
						<div class='w-20 flex-col justify-center text-center'>
							<i class={`${el.name} text-3xl text-stone-700`} ></i>
							<h4 class='text-stone-700 text-xs' >{el.title}</h4>
						</div>
					);
				})}
			</div>
		</div>
	</div>
</li>
