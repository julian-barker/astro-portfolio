---
import { Icon } from 'astro-icon';

export interface Props {
	title: string,
	body: string,
	link: string,
	github: string,
	images: string[],
	technologies: {
		title: string,
		name: string
	}[]
};

const { title, body, link, github, images, technologies} = Astro.props;
---

<li class="link-card mx-6 rounded-md text-gray-300 bg-stone-500 sm:max-w-lg">
	<div class="w-full">
		<img
				src={images[0]}
				alt="project screenshot"
				class="mx-auto mb-4 rounded-t-md shadow-xl brightness-90 object-cover object-left-top" 
				onerror={`this.src='${images[1]}'`}
				style={{marginBottom: 0, paddingBottom: 0, position: 'relative'}}
			/>
	</div>
	<div class="p-4">
		<div>
			<h2 class="mb-4 font-bold text-3xl text-amber-400 drop-shadow-md">
				{title}
			</h2>
			<div class="mb-4 flex space-x-6">
				<a href={link} target="_blank" class="px-3 py-2 rounded-md bg-amber-600 text-stone-200 text-sm text-center shadow-md focus:outline-none focus:ring focus:ring-offset-2 focus:ring-amber-800 hover:bg-amber-700 hover:-translate-y-0.5 hover:-translate-x-0.5 transition-all active:bg-amber-800 active:scale-95">
					Visit <Icon name="akar-icons:link-out" />
				</a>
				<a href={github} target="_blank" class="px-3 py-2 rounded-md bg-amber-600 text-stone-200 text-sm text-center shadow-md focus:outline-none focus:ring focus:ring-offset-2 focus:ring-amber-800 hover:bg-amber-700 hover:-translate-y-0.5 hover:-translate-x-0.5 transition-all active:bg-amber-800 active:scale-95">
					GitHub <Icon name="akar-icons:link-out" class="text-sm" />
				</a>
			</div>
			<p class="mb-2 text-sm text-justify sm:text-md">
				{body}
			</p>
		</div>
		<hr class="w-full">
		<div class="my-3">
			<h3 class="my-3 font-bold text-lg text-center text-stone-800">Built With:</h3>
			<div class="flex flex-wrap justify-evenly gap-y-6">
				{technologies.map(el => {
					return (
						<div class='w-20 flex-col justify-center text-center'>
							<i class={`${el.name} text-3xl text-stone-700`} ></i>
							<h4 class='text-stone-700 text-xs' >{el.title}</h4>
						</div>
					);
				})}
			</div>
		</div>
	</div>
</li>


<style lang='css'>

[astro-icon] {
	display: inline;
	height: 1rem;
}
</style>