---
import Layout from "../layouts/Layout.astro";
import Header from "@components/Header.astro";
import Section from "@layouts/Section.astro";


import Data from "../../public/data.json";
import Project from "@components/Project.astro";
---

<Layout title="Julian Barker">
	<Header name="header" page="about"></Header>
	<main class='overflow-scroll scroll-py-16 scroll-smooth snap-y snap-mandatory' >
		<Section heading='At a Glance...'>
			<p class="text-center text-xl text-zinc-300 sm:text-2xl">
				{Data.basic_info.titles}
			</p>
		</Section>

		<Section heading='Welcome!'>
			<p class="mb-2 text-center text-xl text-zinc-300 sm:text-2xl">
				Hi, I'm <span class="text-amber-500">Julian</span>,
			</p>
			<p class="text-center text-xl text-zinc-300 sm:text-2xl">
				I'm a junior software developer with an insatiable appetite for learning
				new skills and tools. I'm looking forward to a lifelong career of
				growth and contribution to worthy causes!
			</p>
		</Section>

		<Section heading='Skills'></Section>

		<Section heading='Projects'></Section>
		
		<Section heading='Experience'></Section>

		<Section heading='More About Me'></Section>

	</main>
</Layout>
