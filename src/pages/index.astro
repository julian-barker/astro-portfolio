---
import Layout from "../layouts/Layout.astro";
import Header from "@components/Header.astro";
import Hero from "@components/Hero.astro";
import Section from "@layouts/Section.astro";
import Experience from "@components/Experience";

import Data from "../../public/data.json";
import Project from "@components/Project.astro";
---

<Layout title="Julian Barker">
	<Header name="header" page="home"></Header>
	<main class='overflow-scroll scroll-py-16 scroll-smooth snap-y snap-mandatory' >
		<Hero />
		<Section heading='At a Glance...'>
			<p class="text-center text-xl text-zinc-300 sm:text-2xl">
				{Data.basic_info.titles}
			</p>
		</Section>
		
		<Section heading='Skills'>
			<div class="mt-8 flex flex-wrap justify-evenly gap-y-6 sm:gap-x-8">
				{Data.skills.map(el => {
					return (
						<div class='w-28 flex-col justify-center text-center'>
							<i class={`${el.name} text-5xl text-lime-500`} ></i>
							<h4 class='text-lime-500 text-md' >{el.title}</h4>
						</div>
					);
				})}
			</div>
		</Section>
		
		<Section heading='Projects'>
			<ul class="mt-8 flex flex-wrap justify-evenly gap-y-8 sm:gap-y-16">
				{Data.projects.map(el => {
					return (
						<Project 
							title={el.title} 
							body={el.description}
							link={el.link} 
							gh={el.gh}
							images={el.images}
							technologies={el.technologies}
						>
						</Project>
					);
				})}
			</ul>
		</Section>
		
		<Section heading='Experience'>
			<Experience experience={Data.experience} client:idle/>
		</Section>
		
	</main>
</Layout>
