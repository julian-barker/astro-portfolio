---
export interface Props {
	heading: string;
}

const { heading } = Astro.props;
---

<div class="py-6 px-8 sm:py-12">
  <div class='max-w-screen-lg mx-auto'>
    <h2
      class="mb-4 text-2xl font-bold text-center text-amber-600 sm:text-3xl"
    >
      {heading}
    </h2>
    <slot />
  </div>
</div>