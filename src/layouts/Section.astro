---
export interface Props {
	heading: string;
}

const { heading } = Astro.props;
---

<div id={heading.toLowerCase()} class="snap-start py-6 px-4 backdrop-blur-sm even:backdrop-brightness-50 even:-backdrop-hue-rotate-60 even:backdrop-saturate-50 sm:py-12">
  <div class='max-w-screen-xl mx-auto'>
    <h2
      class="mb-4 text-2xl font-audiowide font-bold text-center text-amber-500 drop-shadow-lg sm:text-3xl"
    >
      {heading}
    </h2>
    <slot />
  </div>
</div>